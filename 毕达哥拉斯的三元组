#include<iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "500以内的直角三角形三边（勾股数）：" << endl;
    cout << "格式：直角边1 直角边2 斜边" << endl;
    cout << "------------------------" << endl;

    for (a = 1; a <= 500; a++) {
        for (b = a; b <= 500; b++) {
            for (c = b; c <= 500; c++) {
                if (a*a + b*b == c*c) {
                    cout << a << " " << b << " " << c << endl;
                }
            }
        }
    }

    return 0;
}
